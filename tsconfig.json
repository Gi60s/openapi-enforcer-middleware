{
  "include": ["src/**/*"],
  "compilerOptions": {
    "lib": [
      "es2019",
      "es2020.bigint",
      "es2020.string",
      "es2020.symbol.wellknown"
    ],
    "module": "commonjs",
    "target": "es2018",
    "types": ["node"],

    "outDir": "./dist",

    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "declaration": true,
    "sourceMap": true,
    "strict": true
  }
}

